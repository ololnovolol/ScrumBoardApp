@model ScrumBoardApp.Models.Column.ColumnModel
@{
    ViewData["Title"] = "AddColumn";
}

<link rel="stylesheet" href="~/css/fields.css" media="screen" type="text/css" />

<div class="row justify-content-center align-items-center" >
    <div class="col-md-4">
        <h4>AddColumn</h4>
        <form asp-action="AddColumn" asp-controller="Column">

            <div class="form-group">
                <label asp-for="Name" class="control-label">Input Name</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Board" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>